<table  class="plate-view <%= css_class %>">
  <caption></caption>
  <thead>
    <tr>
      <th class="first-col">&nbsp;</th>
      <% (1..12).each do |column_number| %>
        <th><%= column_number %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% ('A'..'H').each do |row_label| %>
      <tr>
        <th class="first-col"><%= row_label %></th>
        <% (1..12).each do | index| %>
          <td class="col-all <%= "plate-col-#{index}" %>">
            <div class="well <%= "plate-col-#{index}" %> <%= "#{row_label}#{index}" %>" data-location="<%= "#{row_label}#{index}"%>">
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
