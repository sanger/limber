<%= page(:'search-page') do %>
  <%= content do %>
    <%= jumbotron(:login, class: 'logged_out_only') do %>
      <h1 class="display-4">Limber up and log in...</h1>
      <p class="lead">Touch your swipecard to the reader to log yourself in...</p>
      <%= form_tag sessions_path, class: 'plate-search-form', :'data-ajax' => 'false', method: 'post' do %>
        <fieldset class="form-group">
          <%= label_tag :user_swipecard, 'User Swipecard', class: 'col-form-label-lg' %>
          <%= password_field_tag :user_swipecard, params[:user_swipecard], class: 'plate-barcode form-control form-control-lg', placeholder: 'Touch your card to the reader...', required: true %>
        </fieldset>
      <% end %>
    <% end %>

    <%= jumbotron(:plate_search, class: 'logged_in_only') do %>
      <h1  class="display-4">Hello, <span class="user_name_placeholder"><%= user_name %></span>...</h1>
      <p class="lead">Have a plate? Just scan or type in the barcode below.</p>
      <%= form_tag perform_search_path, class: 'plate-search-form', :'data-ajax' => 'false', method: 'post' do %>
        <fieldset class="form-group">
          <%= label_tag :plate_barcode, 'Plate or Tube Barcode', class: 'col-form-label-lg' %>
          <%= text_field_tag :plate_barcode, params[:plate_barcode], class: 'plate-barcode form-control form-control-lg', placeholder: 'e.g. 1220012345855 or DN12345', required: true  %>
        </fieldset>
      <% end %>
    <% end %>
  <% end %>

  <%= render partial: 'sidebar' %>
<% end %>
